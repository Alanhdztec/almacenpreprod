//- views/system/selection.pug
extends ../layouts/main

block content
  .min-h-screen.flex.items-center.justify-center.bg-gray-50.py-12.px-4
    .max-w-md.w-full.space-y-8
      div
        h2.mt-6.text-center.text-3xl.font-extrabold.text-gray-900 Seleccionar Sistema
        p.mt-2.text-center.text-sm.text-gray-600 Elija el sistema de almacén con el que desea trabajar
      form.mt-8.space-y-6(method="POST", action="/system/seleccionar-sistema")
        .form-group
          label(for="sistema", class="block text-sm font-medium text-gray-700") Sistema de Almacén
          select#sistema(name="sistema", required, class="mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm")
            option(value="") -- Seleccione sistema --
            option(value="GENERAL") Almacén General
            option(value="OFICIALIA") Oficialía
        
        if error
          .bg-red-100.border.border-red-400.text-red-700.px-4.py-3.rounded.relative(role="alert")
            span(class="block sm:inline") #{error}

        
        div
          button(type="submit", class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500") Continuar