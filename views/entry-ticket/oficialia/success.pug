extends ../../layouts/main

block content
  .min-h-screen.bg-gray-50.flex.items-center.justify-center
    .max-w-md.w-full.bg-white.rounded-lg.shadow.p-8.text-center
      .mx-auto.flex.items-center.justify-center.h-12.w-12.rounded-full.bg-green-100.mb-6
        svg.h-6.w-6.text-green-600(fill="none", stroke="currentColor", viewBox="0 0 24 24")
          path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M5 13l4 4L19 7")
      
      h2.text-2xl.font-bold.text-gray-900.mb-2 ¡Vale Creado Exitosamente!
      
      p.text-gray-600.mb-2 El vale de entrada ha sido registrado correctamente.
      if valeId
        p.text-sm.text-gray-500.mb-6
          | Folio: 
          span.font-medium.text-gray-900= valeId
      

      .space-y-3
        a(
          href="/entry-ticket/oficialia/create"
          class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500"
        )
          | Crear Otro Vale

        a(
          href="/entry-ticket/oficialia/history"
          class="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-md transition duration-150 ease-in-out flex items-center justify-center"
        )
          svg.h-4.w-4.mr-2(fill="none", stroke="currentColor", viewBox="0 0 24 24")
            path(stroke-linecap="round", stroke-linejoin="round", stroke-width="2", d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z")
          | Ver Historial
        
        a(
          href="/inventario/oficialia"
          class="w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        )
          | Volver al Inventario